@model  IList<MediCure.Models.medmodel>
@{
    ViewBag.Title = "Medi-Directory";
}

<!-- Header -->
<header id="header" class="ex-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1>Medi-Directory</h1>
            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</header> <!-- end of ex-header -->
<!-- end of header -->
<!-- Breadcrumbs -->
<div class="ex-basic-1">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumbs">
                    <a href="index.html">Home</a><i class="fa fa-angle-double-right"></i><span>Medi-Directory</span>
                </div> <!-- end of breadcrumbs -->
            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</div> <!-- end of ex-basic-1 -->
<!-- end of breadcrumbs -->

<!-- Medicine Directory -->

<div class="container">
    <table class="table table-bordered table-hover">
        <thead class="table-info">
            <tr>
                <th style="min-width: 180px;">Medicine Name</th>
                <th style="min-width: 180px;">Manufactured By</th>
                <th style="min-width: 180px;">Usage</th>
                <th>Description</th>
            </tr>
        </thead>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DrugName</td>
                        <td>@item.Manufacturer</td>
                        <td>@item.UsedFor</td>
                        <td>@item.Description</td>
                    </tr>
                }
            }
    </table>
</div>

<!-- End of Medicine Directory -->

<!-- Breadcrumbs -->
<div class="ex-basic-1">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumbs">
                    <a href="index.html">Home</a><i class="fa fa-angle-double-right"></i><span>Medi-Directory</span>
                </div> <!-- end of breadcrumbs -->
            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</div> <!-- end of ex-basic-1 -->
<!-- end of breadcrumbs -->
